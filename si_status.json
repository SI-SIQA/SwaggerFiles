        "description": "API for retrieving the status of dataflows",
        "title": "Dataflows Status API",
        "version": "1.0.0"
    },
    "paths": {
        "/status/dataflows/{dataflowid}": {
            "get": {
				 "operationId": "getStatus",
                "description": "Retrieves the status of a specified dataflow",
                "parameters": [
                    {
                        "description": "ID of the dataflow to retrieve status for",
                        "in": "path",
                        "name": "dataflowid",
                        "required": true,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful response",
                        "schema": {
                            "properties": {
                                "dataflowid": {
                                    "example": "12345",
                                    "type": "string"
                                },
                                "details": {
                                    "properties": {
                                        "endTime": {
                                            "example": "2023-01-01T01:00:00Z",
                                            "format": "date-time",
                                            "type": "string"
                                        },
                                        "startTime": {
                                            "example": "2023-01-01T00:00:00Z",
                                            "format": "date-time",
                                            "type": "string"
                                        }
                                    },
                                    "type": "object"
                                },
                                "status": {
                                    "example": "running",
                                    "type": "string"
                                }
                            },
                            "type": "object"
                        }
                    },
                    "400": {
                        "description": "Bad Request"
                    },
                    "401": {
                        "description": "Unauthorized"
                    },
                    "404": {
                        "description": "Dataflow not found"
                    },
                    "500": {
                        "description": "Internal server error"
                    }
                },
                "summary": "Get Dataflow Status"
            }
        }
