{
  "swagger": "2.0",
  "info": {
    "description": "API for retrieving the status of dataflows",
    "version": "1.0.0",
    "title": "Dataflows Status API"
  },
  "host": "qa-pod1-ing.rel.infaqa.com",
  "basePath": "/sisvc/monitor/v1",
  "schemes": [
    "https"
  ],
  "paths": {
    "/status/dataflows/{dataflowid}": {
      "get": {
        "summary": "Get Dataflow Status",
        "description": "Retrieves the status of a specified dataflow",
        "parameters": [
          {
            "name": "dataflowid",
            "in": "path",
            "required": true,
            "type": "string",
            "description": "ID of the dataflow to retrieve status for"
          },
          {
            "name": "IDS-SESSION-ID",
            "in": "header",
            "required": true,
            "type": "string",
            "description": "Session ID for authentication"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "schema": {
              "type": "object",
              "properties": {
                "status": {
                  "type": "string",
                  "example": "running"
                },
                "dataflowid": {
                  "type": "string",
                  "example": "12345"
                },
                "details": {
                  "type": "object",
                  "properties": {
                    "startTime": {
                      "type": "string",
                      "format": "date-time",
                      "example": "2023-01-01T00:00:00Z"
                    },
                    "endTime": {
                      "type": "string",
                      "format": "date-time",
                      "example": "2023-01-01T01:00:00Z"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "Bad Request"
          },
          "401": {
            "description": "Unauthorized"
          },
          "404": {
            "description": "Dataflow not found"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    }
  },
  "definitions": {},
  "securityDefinitions": {},
  "tags": [
    {
      "name": "DataflowStatus",
      "description": "Operations about dataflow status"
    }
  ]
}
